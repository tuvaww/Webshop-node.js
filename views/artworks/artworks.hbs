<section id="feedSection">
  {{#each artworks}}
    <a href="/artworks/{{_id}}">
      <img src="{{imgUrl}}" alt="{{name}}" />
      <form action="/admin/save" method="post">
        {{! <button class="btn" type="submit">Add to collection</button> }}
        <button class="btn" type="submit">
          <i id="heartIcon" class="bi bi-suit-heart"></i>
        </button>
        <input type="hidden" name="artId" value="{{_id}}" />
      </form>
    </a>
